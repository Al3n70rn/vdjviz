# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                     controllers.Application.index(username: String ?= null)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                         controllers.Assets.at(path="/public", file)

# Account routes
GET         /account/                             controllers.Application.redirectToAccount()
GET         /account/:account/                    controllers.UserAccount.userpage(account: models.Account)
GET         /account/:account/newfile             controllers.UserAccount.newFile(account: models.Account)
POST        /account/:account/newfile             controllers.UserAccount.saveNewFile(account: models.Account)
GET         /account/:account/:file/table         controllers.Computation.vdjUsageData(account: models.Account, file: models.UserFile, optimization: Boolean ?= true)
GET         /account/:account/:file/histogram     controllers.Computation.returnSpectrotypeHistogram(account: models.Account, file: models.UserFile)
GET         /account/:account/:file/delete        controllers.UserAccount.deleteFile(account: models.Account, file: models.UserFile)
GET         /newuser/                             controllers.Users.newUser()
POST        /newuser/save                         controllers.Users.saveNewUser()
GET         /login/                               controllers.Application.login()
GET         /logout/                              controllers.Application.logout()
POST        /autenthiticate                       controllers.Application.authenticate()